package com.swh.project;

import java.nio.file.FileSystems;
import java.nio.file.Path;
import java.nio.file.Paths;
import java.nio.file.StandardWatchEventKinds;
import java.nio.file.WatchEvent;
import java.nio.file.WatchKey;
import java.nio.file.WatchService;
import java.util.Scanner;

public class WatchDirectory{

	private String fileName;

	public static void main(String[] args) throws Exception {

		WatchService watchService
		= FileSystems.getDefault().newWatchService();

		Path path = Paths.get("C:/Users/ykm09/Desktop/coding/_publishTestFile");

		path.register(
				watchService, 
				StandardWatchEventKinds.ENTRY_CREATE, 
				StandardWatchEventKinds.ENTRY_DELETE, 
				StandardWatchEventKinds.ENTRY_MODIFY);
		
		Scanner sc = new Scanner(System.in);
		WatchKey key;
		while ((key = watchService.take()) != null) {
			for (WatchEvent<?> event : key.pollEvents()) {
				if(StandardWatchEventKinds.ENTRY_CREATE.equals(event.kind())){
					
					System.out.print("파일이 감지되었습니다.");
					System.out.println("파일 전송 방식을 입력하세요(1:queue, 2:TCP(class), 3:TCP(byte array)");
					int n = sc.nextInt();
					
					Director director = new Director(YRead.getC(n));
					director.construct(event.context().toString());
				}
			}
			key.reset();
		}
	}
}